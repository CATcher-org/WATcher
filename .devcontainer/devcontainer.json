// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
  "name": "WATcher-development",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-16",
  "features": {
    "ghcr.io/kreemer/features/chrometesting:1": {}
  },
  "workspaceFolder": "/WATcher", // Set the workspace folder
  "workspaceMount": "source=${localWorkspaceFolder},target=${containerWorkspaceFolder},type=bind",
  "mounts": ["source=watcher-node_modules,target=${containerWorkspaceFolder}/node_modules,type=volume"],
  "runArgs": [
    "--name=WATcher-development" // Set the container name
  ],
  "onCreateCommand": "sudo chown -R node:node ${containerWorkspaceFolder}/*",
  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": "bash -c 'npm install --legacy-peer-deps --verbose'", // Install dependencies
  "postStartCommand": "bash -c 'npm run ng:serve:web'", // Start the app
  // Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "extensions": ["graphql.vscode-graphql-syntax", "ms-playwright.playwright", "github.vscode-github-actions"]
    }
  },
  "containerEnv": {
    "CHROME_BIN": "/usr/local/bin/chrome"
  }
  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
